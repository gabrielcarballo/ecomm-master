{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend module",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf ./application/backend/.build",
    "build": "tsc --project tsconfig.json --outDir .build",
    "prestart": "npm run build && npm run db:reset",
    "start": "node .build/server.js",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "predev": "ts-node -r dotenv/config ./src/db/config/config.ts && npm run db:reset",
    "dev": "nodemon --exec ts-node src/server.ts",
    "sequelize": "sequelize",
    "sequelize:migrate": "npm run sequelize -- db:migrate",
    "sequelize:seed": "npm run sequelize -- db:seed:all",
    "test": "mocha -r ts-node/register ./src/tests/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "test:coverage": "nyc npm run test",
    "test:coverage:json": "nyc --reporter=json-summary npm run test",
    "lint": "eslint ./src --ext .ts"
  },
  "author": "gabrielcarballo",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^8.45.0",
    "express": "^4.18.2",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.0",
    "on-exit": "^1.0.1",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.6.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^10.0.1",
    "@types/mysql": "^2.15.21",
    "@types/node": "^16.11.7",
    "@types/pg": "^8.6.0",
    "@types/sequelize": "^4.28.11",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "15.0.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-mocha": "9.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^27.2.5",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.6.1",
    "sinon": "^15.2.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
